{
  "name": "@td/td-i18n-js",
  "version": "1.0.0-canary.0",
  "description": "A library to provide I18n on JavaScript by fetching translations from CMS API.",
  "main": "index.js",
  "scripts": {
    "build": "yarn clean && yarn build:js",
    "build:browser": "webpack --output-path ./dist/browser/ --output-filename index.js --mode production --entry ./dist/import/index.js --output-library-type umd --output-library-name I18n",
    "build:import": "tsc --outDir ./dist/import --module ESNext",
    "build:js": "yarn build:import && yarn build:browser",
    "clean": "rm -rf ./dist",
    "lint": "yarn lint:typescript && yarn lint:eslint",
    "lint:eslint:fix": "eslint --fix --config .eslintrc.js --max-warnings 0 'src/**/*' 'tests/**/*'",
    "lint:eslint": "eslint --config .eslintrc.js --max-warnings 0 'src/**/*' 'tests/**/*'",
    "lint:typescript": "tsc --noEmit",
    "test": "jest --watch --coverage"
  },
  "author": "Kiril Rusev <kiril.rusev@teladochealth.com>",
  "license": "ISC",
  "dependencies": {
    "i18n-js": "^4.3.2",
    "js-logger": "^1.6.1",
    "lodash": "^4.17.21",
    "sync-fetch": "^0.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/lodash": "^4.14.200",
    "@types/sync-fetch": "^0.4.3",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
